{
    "name": "copy-under",
    "displayName": "copy-under",
    "description": "Copies selected text to a new file",
    "version": "0.0.1",
    "publisher": "kevin-felichko",
    "icon": "images/copy-under.svg",
    "repository": {
        "type": "git",
        "url": "https://github.com/kfelichko/copy-under"
    },    
    "engines": {
        "vscode": "^1.5.0"
    },
    "keywords": [
        "copy selected text to new file",
        "duplicate selected text"
    ],    
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.copyUnder"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
            "command": "extension.copyUnder",
            "title": "Copy Under"
        }],
        "keybindings": [{
            "key": "alt+shift+c",
            "mac": "alt+shift+c",
            "command": "extension.copyUnder"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}